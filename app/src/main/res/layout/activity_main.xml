    android:layout_height="match_parent">
    <Button
        android:id="@+id/add"
        android:text="add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/query"
        android:text="query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/update"
        android:text="update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/delete"
        android:text="delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
